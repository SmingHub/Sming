{
    "folders": [
        {
            "path": "."
        }
    ],
    "settings": {
        "files.associations": {
            "*.hw": "jsonc",
            "*.fwfs": "jsonc",
            "optional": "cpp"
        },
        "json.schemas": [
            {
                "fileMatch": [
                    "*.hw"
                ],
                "url": "{$SMING_HOME}/Components/Storage/schema.json"
            },
            {
                "fileMatch": [
                    "*.fwfs"
                ],
                "url": "${SMING_HOME}/Components/IFS/fsbuild/schema.json"
            }
        ]
    }
}