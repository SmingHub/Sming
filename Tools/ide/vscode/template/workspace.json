{
    "folders": [
        {
            "path": "."
        }
    ],
    "settings": {
        "terminal.integrated.defaultProfile.windows": "Command Prompt",
        "files.associations": {
            "*.hw": "jsonc",
            "*.fwfs": "jsonc",
            "*.usbcfg": "jsonc",
            "optional": "cpp"
        },
        "json.schemas": [
            {
                "fileMatch": [
                    "*.hw"
                ],
                "url": "file://${SMING_HOME}/Components/Storage/schema.json"
            },
            {
                "fileMatch": [
                    "*.fwfs"
                ],
                "url": "file://${SMING_HOME}/Components/IFS/fsbuild/schema.json"
            },
            {
                "fileMatch": [
                    "*.usbcfg"
                ],
                "url": "file://${SMING_HOME}/Libraries/USB/schema.json"
            }
        ]
    }
}