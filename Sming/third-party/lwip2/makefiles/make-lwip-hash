#!/bin/sh

cd lwip2-src

hash=$(git log -1 --format="%h")
tag=$(git describe --tag 2>/dev/null)

cat << EOF > ../glue-lwip/lwip-git-hash.h
// generated by makefiles/make-lwip2-hash
#ifndef LWIP_HASH_H
#define LWIP_HASH_H
#define LWIP_HASH 0x$hash
#define LWIP_HASH_STR "$hash(tag:$tag)"
#endif // LWIP_HASH_H
EOF
